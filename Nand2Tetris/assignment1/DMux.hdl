/**
 * Demultiplexor:
 * {a, b} = {in, 0} if sel == 0
 *          {0, in} if sel == 1
 */

CHIP DMux {
    IN in, sel;
    OUT a, b;

    PARTS:
    // if sel is 0 write 'in' in 'a' 
    Not(in=sel, out=selIsZero);
    And(a=selIsZero, b=in, out=a);

    // if sel is 1 write 'in' in 'b'
    And(a=sel, b=in, out=b);

}
