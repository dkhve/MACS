<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app
        xmlns="java.sun.com/xml/ns/javaee"
        xmlns:xsi="w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="java.sun.com/xml/ns/javaee java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <display-name>Basic Store</display-name>


    <servlet>
        <servlet-name>product-handler</servlet-name>
        <servlet-class>Controller.ProductHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>product-handler</servlet-name>
        <url-pattern>/showProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>Controller.Home</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shopping-handler</servlet-name>
        <servlet-class>Controller.ShoppingHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>shopping-handler</servlet-name>
        <url-pattern>/shopping-cart</url-pattern>
    </servlet-mapping>

</web-app>
